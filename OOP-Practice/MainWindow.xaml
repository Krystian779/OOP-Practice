<Window x:Class="OOP_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Label Content="Events" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="tbxSearch" Text="Search" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" GotFocus="tbxSearch_GotFocus" KeyUp="tbxSearch_KeyUp"/>
        <Label Content="Tickets" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>

        <ListBox Name="lbxEvents" Grid.Row="1" Grid.Column="0" Margin="10" Grid.ColumnSpan="2" SelectionChanged="lbxEvents_SelectionChanged"/>
        <ListBox Name="lbxTickets" Grid.Row="1" Grid.Column="2" Margin="10" />
        
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="5" >
            <Label Content="Number of Tickets" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="10"/>
            <TextBox Name="tbxNumberOfTickets" Width="100" Margin="15"/>
            <Button Name="btnBook" Content="Book" Width="100" VerticalAlignment="Center" Margin="10" Click="btnBook_Click"/> 
        </StackPanel>

    </Grid>
</Window>
